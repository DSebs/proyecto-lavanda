<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frames.GestionPerfilActivity">

    <ImageView
        android:id="@+id/imgPerfilUsuario"
        android:layout_width="169dp"
        android:layout_height="138dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/gatita"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/be_vietnam_pro"
        android:text="Santiago Cardenas "
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilUsuario" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="332dp"
        android:layout_height="220dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuario"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rounded_edittext" />

    <TextView
        android:id="@+id/lblInfoPerfil"
        android:layout_width="253dp"
        android:layout_height="33dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Informacion de Usuario"
        android:textColor="#3B166A"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilUsuario" />

    <TextView
        android:id="@+id/lblCorreo"
        android:layout_width="292dp"
        android:layout_height="35dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/josefin_sans"
        android:text=" Correo: santiago@gmail.com"
        android:textColor="#3B166A"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblInfoPerfil" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="290dp"
        android:layout_height="32dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Telefono: 300 6634197"
        android:textColor="#3B166A"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCorreo" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="291dp"
        android:layout_height="33dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Direccion: Cra 2a N 65-64"
        android:textColor="#3B166A"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTelefono" />

</androidx.constraintlayout.widget.ConstraintLayout>