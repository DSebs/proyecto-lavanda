<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frames.GestionPerfilActivity">

    <ImageView
        android:id="@+id/imgPerfilUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/be_vietnam_pro"
        android:text="Nombre del Usuario"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilUsuario" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="266dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/rounded_edittext"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="391dp" />

    <TextView
        android:id="@+id/lblInfoPerfil"
        android:layout_width="253dp"
        android:layout_height="33dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Informacion de Usuario"
        android:textColor="#3B166A"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="400dp" />

    <TextView
        android:id="@+id/lblCorreo"
        android:layout_width="73dp"
        android:layout_height="29dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Correo: "
        android:textColor="#3B166A"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="441dp" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Telefono: "
        android:textColor="#3B166A"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="483dp" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Direccion: "
        android:textColor="#3B166A"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="521dp" />

</androidx.constraintlayout.widget.ConstraintLayout>